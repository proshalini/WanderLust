<% layout('/layouts/boilerplate') -%>
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <h3>
        <%=listing.title%>
      </h3>
    </div>
    <div class="card col-8 offset-2">
      <img src="<%=listing.image%>" class="card-img-top" alt="listing-image">
      <div class="card-body">
        <p class="card-text">
          <%=listing.description%>
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">&#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") :"priceunavailabe" %> /Night</li>
        <li class="list-group-item">
          <%=listing.country%>
        </li>
        <li class="list-group-item">
          <%=listing.location%>
        </li>
      </ul>
      <div class="card-body btn-section">
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-dark add-btn">Delete</button>
        </form>
        <a href="/listings/<%=listing._id%>/edit" class="card-link ms-3"><button
            class="btn btn-dark edit-btn">Edit</button></a>
      </div>

      <div class="mb-3">
        <hr />
        <h4>Leave a Review</h4>
        <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation ">
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input id="rating" type="range" min="1" max="5" name="review[rating]"  class="form-range"/>
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label" >Comment</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">
                        Please provide some review
                    </div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
      </div>
      <div>
        <h3>All Reviews</h3>
      <div class="row">
        <%for(let review of listing.reviews){%>
          <div class="card ms-3 mb-3 col-5">
            <div class="card-header">User</div>
            <div class="card-body">
              <h5 class="card-title"><%=review.rating%> stars</h5>
              <p class="card-text"><%=review.comment%></p>
              <form class="mb-3" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review.id%>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>
          </div>
        <%}%>
      </div>
      </div>
    </div>
  </div>