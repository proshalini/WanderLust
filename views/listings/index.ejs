<% layout ('/layouts/boilerplate')-%>

    <body>
        <h3>All Listings</h3>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

            <%for(let list of allListings){%>
                <a href="/listings/<%=list._id%>" class="listing-link">
                    <div class="card col">
                        <img src="<%=list.image%>" class="card-img-top" alt="listing-image">
                        <div class="card-img-overlay"><%=list.country%></div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%=list.title%>
                                </h5>
                                <p class="card-text">&#8377; <%= list.price ? list.price.toLocaleString("en-IN") : "Price unavailable" %> /Night</p>

                            </div>
                        
                    </div>
                </a>
                <%}%>

        </div>
    </body>

    </html>